<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorIce"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/img_perfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/ic_perfil_round"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txt_comentarios_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@id/img_perfil"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/txt_comentarios_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@id/img_perfil"
            app:layout_constraintTop_toBottomOf="@id/txt_comentarios_name"
    />

    <TextView
            android:id="@+id/txt_comentarios_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="body"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_perfil"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBlack"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/txt_comentarios_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>